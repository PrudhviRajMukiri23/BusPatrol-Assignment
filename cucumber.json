{
    "default": {
        "formatOptions": {
            "snippetInterface":"async-await",
            "timeout": 50000
        },
        "paths": ["functional_tests/test/features"],
        "require": ["functional_tests/test/step_def/*.spec.ts", "functional_tests/test/hooks/*.ts"],
        "dryRun": false,
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar",
            "html:test-results/functional-tests-report.html",
            "json:test-results/functional-tests-report.json",
            "summary",
            "rerun:@rerun.txt"
        ]
    },     
    
    "rerun": {
        "formatOptions": {
            "snippetInterface":"async-await",
            "timeout": 50000
        },
        "require": ["functional_tests/test/step_def/*.spec.ts", "functional_tests/test/hooks/*.ts"],
        "dryRun": false,
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar",
            "html:test-results/functional_tests_report.html",
            "json:test-results/functional_tests_report.json",
            "summary",
            "rerun:@rerun.txt"
        ]
    }
}